<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:MD="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:MW="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="TxtStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="MD:TextFieldAssist.UnderlineBrush" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
        <Setter Property="BorderBrush" Value="WhiteSmoke"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="MD:TextFieldAssist.HasClearButton" Value="True"/>
        <Setter Property="MD:HintAssist.Foreground" Value="Gray"/>
    </Style>
</ResourceDictionary>